#include <stdio.h>

int buscaArray(int arr[], int n, int x) {
    if (n < 0) return 0;
    if (arr[n] == x) return 1;
    return buscaArray(arr, n - 1, x);
}

int main() {
    int arr[] = {2, 4, 6, 8};
    int x = 6;
    int n = sizeof(arr) / sizeof(arr[0]);
    if (buscaArray(arr, n - 1, x)) {
        printf("Elemento encontrado\n");
    } else {
        printf("Elemento nÃ£o encontrado\n");
    }
    return 0;
}
